{
    "testEnvironment": "jsdom",
    "transform": {
        "\\.(js|jsx|ts|tsx)$": [
            "ts-jest",
            {
                "babelConfig": {
                    "presets": [
                        "@babel/preset-env",
                        "@babel/preset-react",
                        "@babel/preset-flow",
                        "@babel/preset-typescript"
                    ]
                }
            }
        ]
    },
    "moduleNameMapper": {
        "^ui/(.*)$": "<rootDir>/ui/$1",
        "framer-motion": "<rootDir>/__mocks__/framer-motion.js"
    }
}
